apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
  # Find the latest tag here: https://github.com/ansible/awx-operator/releases
  - github.com/ansible/awx-operator/config/default?ref={{ ansible_awx_k3d_awx_operator_version }}
  - awx-instance.yml

# Set the image tags to match the git version from above
images:
  - name: quay.io/ansible/awx-operator
    newTag: {{ ansible_awx_k3d_awx_operator_version }}

# Specify a custom namespace in which to install AWX
namespace: awx

# Upload private CA for AWX into Kubernetes
secretGenerator:
  - name: awx-custom-certs
    files:
      - bundle-ca.crt=registry.pem
    options:
      disableNameSuffixHash: true
